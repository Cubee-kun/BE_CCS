                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            },
            "Implementasi": {
                "required": [
                    "perencanaan_id",
                    "nama_perusahaan_sesuai",
                    "lokasi_sesuai",
                    "jenis_kegiatan_sesuai",
                    "jumlah_bibit_sesuai",
                    "jenis_bibit_sesuai",
                    "tanggal_sesuai",
                    "pic_koorlap"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "perencanaan_id": {
                        "description": "ID dari perencanaan terkait",
                        "type": "integer",
                        "example": 5
                    },
                    "nama_perusahaan_sesuai": {
                        "type": "string",
                        "example": "PT Hijau Lestari"
                    },
                    "lokasi_sesuai": {
                        "type": "string",
                        "example": "Kecamatan Sukamaju, Kabupaten Bandung"
                    },
                    "jenis_kegiatan_sesuai": {
                        "type": "string",
                        "example": "Penanaman Pohon"
                    },
                    "jumlah_bibit_sesuai": {
                        "type": "integer",
                        "example": 1000
                    },
                    "jenis_bibit_sesuai": {
                        "type": "string",
                        "example": "Mahoni"
                    },
                    "tanggal_sesuai": {
                        "type": "string",
                        "format": "date",
                        "example": "2025-09-16"
                    },
                    "pic_koorlap": {
                        "type": "string",
                        "example": "Budi Santoso"
                    },
                    "dokumentasi_kegiatan": {
                        "type": "string",
                        "format": "binary",
                        "example": "dokumen.jpg"
                    },
                    "geotagging": {
                        "type": "string",
                        "example": "https://maps.google.com/?q=-6.917464,107.619123"
                    },
                    "lat": {
                        "type": "number",
                        "format": "float",
                        "example": -6.917464
                    },
                    "long": {
                        "type": "number",
                        "format": "float",
                        "example": 107.619123
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-09-16T12:34:56Z"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-09-16T12:34:56Z"
                    }
                },
                "type": "object"
            },
            "Monitoring": {
                "required": [
                    "implementasi_id",
                    "jumlah_bibit_ditanam",
                    "jumlah_bibit_mati",
                    "diameter_batang",
                    "jumlah_daun"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "implementasi_id": {
                        "description": "ID implementasi terkait",
                        "type": "integer",
                        "example": 10
                    },
                    "jumlah_bibit_ditanam": {
                        "description": "Jumlah bibit yang berhasil ditanam",
                        "type": "integer",
                        "example": 950
                    },
                    "jumlah_bibit_mati": {
                        "description": "Jumlah bibit yang mati",
                        "type": "integer",
